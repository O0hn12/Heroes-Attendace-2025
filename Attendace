  <script>
    let selectedSheet = "";
    const scriptURL = 'https://attendace.johnmamdouh777.workers.dev/';
    let allNames = [];
    
    document.getElementById("loginBtn").addEventListener("click", function () {
  console.log("🔍 تم الضغط على تسجيل الدخول");

  const username = document.getElementById("loginUsername").value.trim();
  const password = document.getElementById("loginPassword").value.trim();

  if (username === "جون" && password === "12345") {
    alert("تم تسجيل الدخول بنجاح");
    changePage("loginSection", "choiceSection"); // ✅ الانتقال إلى صفحة الاختيار بدلاً من إدخال البيانات
  } else {
    alert("❌ اسم المستخدم أو كلمة المرور غير صحيحة!");
  }
});
    function changePage(oldPage, newPage) {
  document.getElementById(oldPage).classList.remove("active");
  document.getElementById(oldPage).style.display = "none";
  document.getElementById(newPage).style.display = "block";
  setTimeout(() => { document.getElementById(newPage).classList.add("active"); }, 50);

  // ✅ إظهار البحث فقط إذا كانت الصفحة الجديدة هي `dataSection`
  document.getElementById("searchSection").style.display = (newPage === "dataSection") ? "block" : "none";
      const backButton = document.getElementById("backBtn");
backButton.style.display = (newPage === "dataSection") ? "block" : "none"; // ✅ يظهر فقط في صفحة إدخال البيانات
if (newPage === "passwordPage") {
    backButton.style.display = "none"; // ✅ إخفاءه تمامًا في الصفحة الأولى
}
}
    
    function selectSheet(sheetName) {
    selectedSheet = sheetName;
    selectedWeek = ""; // ✅ تعيينه كقيمة أولية لمنع الأخطاء

    // ✅ تحديث اسم الشيت داخل HTML
    const sheetElement = document.getElementById("selectedSheet");
    if (sheetElement) {
        sheetElement.textContent = selectedSheet;
        console.log(`✅ تم تحديث اسم الشيت: ${selectedSheet}`);
    } else {
        console.error("❌ العنصر selectedSheet غير موجود في HTML!");
    }

    // ✅ تحديث الأسبوع داخل HTML ليصبح فارغًا
    const weekElement = document.getElementById("selectedWeek");
    if (weekElement) {
        weekElement.textContent = "❌ لم يتم الاختيار بعد"; // ✅ لا تتركه فارغًا
    }

    alert(`✅ تم اختيار ${sheetName}`);
    loadNames(); // ✅ تحميل البيانات وفقًا للشيت المختار
    changePage("choiceSection", "weekSelectionPage"); // ✅ انتقال صحيح إلى اختيار الأسبوع
}

    function selectWeek(weekName) {
    selectedWeek = weekName;
    console.log(`🔍 تم اختيار الأسبوع: ${selectedWeek}`); // ✅ تتبع التنفيذ

    // ✅ تأكد من تحديث الأسبوع داخل HTML
    const weekElement = document.getElementById("selectedWeek");
    if (weekElement) {
        weekElement.textContent = selectedWeek;
        console.log(`✅ تم تحديث الأسبوع: ${selectedWeek}`);
    } else {
        console.error("❌ العنصر selectedWeek غير موجود في HTML! تأكد من إضافته.");
        return;
    }

    // ✅ تأكد من أن `selectedSheet` يظهر بوضوح
    const sheetElement = document.getElementById("selectedSheet");
    if (sheetElement && selectedSheet) {
        sheetElement.textContent = selectedSheet;
        console.log(`✅ الشيت المختار لا يزال محفوظ: ${selectedSheet}`);
    } else {
        console.error("❌ العنصر selectedSheet غير موجود في HTML! تأكد من إضافته.");
    }

    changePage("weekSelectionPage", "dataSection"); // ✅ انتقال صحيح إلى صفحة إدخال البيانات
    console.log("✅ تم الانتقال إلى صفحة إدخال البيانات");
}
    
function loadNames() {
    if (!selectedSheet) {
        console.error("❌ لم يتم اختيار شيت بعد!");
        return; 
    }

    fetch(`https://hero2025.johnmamdouh777.workers.dev/?action=getAllNames&sheet=${encodeURIComponent(selectedSheet)}`)
    .then(res => res.text()) // ✅ استقبال الاستجابة كنص لفحص نوع البيانات
    .then(data => {
        console.log("📌 استجابة السيرفر:", data); // ✅ فحص البيانات المستلمة
        try {
            const jsonData = JSON.parse(data);
            if (!jsonData.names || !Array.isArray(jsonData.names)) {
                throw new Error("❌ البيانات المستلمة لا تحتوي على قائمة أسماء صحيحة!");
            }
            console.log("✅ تم تحويل البيانات إلى JSON:", jsonData);
            return jsonData; // ✅ تمرير البيانات الصحيحة إلى `then()` التالي
        } catch (error) {
            console.error("❌ خطأ في تحويل البيانات إلى JSON:", error);
            return { names: [] }; // ✅ تجنب توقف الكود وإرجاع قائمة فارغة
        }
    })
    .then(data => {
        console.log("📌 البيانات النهائية بعد التحليل:", JSON.stringify(data, null, 2));
        allNames = data.names || []; // ✅ التأكد من وجود أسماء

        let tableBody = document.querySelector("#resultTable tbody");
        tableBody.innerHTML = "";

        // ✅ تحقق من `students` قبل التنفيذ
        if (!data.students || !Array.isArray(data.students)) {
            console.error("❌ البيانات المستلمة لا تحتوي على `students`.");
            return;
        }

        data.students.forEach(student => {
            let scores = Array.isArray(student.scores) ? student.scores : [];
            while (scores.length < 9) { 
                scores.push("-"); // ✅ ضمان أن كل صف يحتوي على 9 أعمدة
            }

            let row = document.createElement("tr");

            // ✅ إضافة الاسم إلى الصف
            let nameCell = document.createElement("td");
            nameCell.textContent = student.name || "❌ غير معروف";
            row.appendChild(nameCell);

            // ✅ إضافة الدرجات إلى الصف
            for (let i = 0; i < 9; i++) {
                const td = document.createElement("td");
                td.textContent = scores[i] !== undefined && scores[i] !== "" ? scores[i] : "-";
                row.appendChild(td);
            }

            tableBody.appendChild(row);
        });
    })
    .catch(err => console.error("❌ خطأ أثناء تحميل الأسماء:", err));
}

function showSuggestions(inputElement, suggestionsContainer) {
      if (!suggestionsContainer) {
        console.error("❌ عنصر الاقتراحات غير موجود في HTML!");
        return;
      }

      const value = inputElement.value.toLowerCase();
      suggestionsContainer.innerHTML = "";

      if (!value) return;

      if (!allNames || allNames.length === 0) {
    console.error("❌ لا توجد أسماء محملة!");
    return;
}
let filtered = allNames.filter(name => name && name.toLowerCase().includes(value));

      if (filtered.length === 0) {
        suggestionsContainer.innerHTML = "<div class='suggestion-item'>لا توجد نتائج</div>";
        return;
      }

      filtered.slice(0, 10).forEach(name => {
        const item = document.createElement("div");
        item.className = "suggestion-item";
        item.textContent = name;
        item.onclick = () => {
          inputElement.value = name;
          suggestionsContainer.innerHTML = "";
        };
        suggestionsContainer.appendChild(item);
      });
    }

    document.getElementById("nameInput").addEventListener("input", function () {
  if (allNames.length === 0) {
    console.warn("🟡 الأسماء لم تُحمّل بعد، سيتم إعادة التحميل...");
    loadNames();
  }
  showSuggestions(this, document.getElementById("nameSuggestions"));
  checkSubmitState();
});
    
document.getElementById("numberInput").addEventListener("input", checkSubmitState); // ✅

    document.getElementById("searchInput").addEventListener("input", function () {
      showSuggestions(this, document.getElementById("searchSuggestions"));
    });
    function checkSubmitState() {
  const name = document.getElementById("nameInput").value.trim();
  const number = document.getElementById("numberInput").value.trim();
  const validNumber = number !== "" && +number >= 0 && +number <= 10;
  const hasName = name !== "";

  console.log("🔍 فحص حالة الإدخال: الاسم =", hasName, "| الرقم =", validNumber);

  document.getElementById("submitBtn").disabled = !(validNumber && hasName);
}
    function submitData() {
  console.log("✅ تم الضغط على زر الإدخال");
  if (!selectedSheet) {
    alert("❌ يجب اختيار شيت أولاً!");
    return;
  }

  const name = document.getElementById("nameInput").value.trim();
  const number = Number(document.getElementById("numberInput").value);

  // بيانات الإرسال
  if (!selectedWeek || typeof selectedWeek !== "string" || selectedWeek.length === 0) {
    alert("❌ يجب تحديد الأسبوع بشكل صحيح!");
    console.error("❌ `selectedWeek` فارغ أو غير معرف:", selectedWeek);
    return;
}

const data = {
    name: name,
    number: number,
    sheet: selectedSheet,
    week: selectedWeek // ✅ تمرير `week` كما هو بدون تحويله إلى رقم
};

  fetch(scriptURL, {
    method: 'POST',
    body: JSON.stringify(data),
    headers: {
      'Content-Type': 'application/json'
    }
  })
  .then(res => res.text()) // ✅ استقبال الاستجابة كنص لفحص نوع البيانات
.then(data => {
    console.log("📌 استجابة السيرفر:", data);
    try {
        return JSON.parse(data);
    } catch (error) {
        console.error("❌ خطأ في تحويل البيانات إلى JSON:", error);
        return { success: false, error: "❌ استجابة غير صالحة" };
    }
})
  .then(response => {
    console.log("✅ استجابة Google Apps Script:", response);
    
    if (!response.success) {
        alert(response.message); // 📌 عرض رسالة الخطأ للمستخدم مباشرة
        console.error("❌ فشل إدخال البيانات:", response);
    } else {
        alert("✅ تم الإدخال بنجاح!");
        document.getElementById("nameInput").value = "";
        document.getElementById("numberInput").value = "";
        loadNames();
        checkSubmitState();
    }
})
  .catch(err => console.error("❌ خطأ أثناء إرسال البيانات:", err));
}
    
function searchName() {
  console.log("🔍 تم الضغط على زر البحث");

  const search = document.getElementById("searchInput").value.trim();

  if (!search) {
    alert("❌ يرجى إدخال اسم للبحث!");
    return;
  }

  fetch(`${scriptURL}?action=searchName&sheet=${selectedSheet}&name=${encodeURIComponent(search)}`)
    .then(res => res.text()) // ✅ استقبال الاستجابة كنص لفحص نوع البيانات
.then(data => {
    console.log("📌 استجابة السيرفر:", data);
    if (data.startsWith("<!DOCTYPE html>")) {
        console.error("❌ السيرفر يعيد HTML بدلًا من JSON! قد يكون هناك خطأ في `Google Apps Script`.");
        return { found: false, data: [] };
    }
    try {
        return JSON.parse(data);
    } catch (error) {
        console.error("❌ خطأ في تحويل البيانات إلى JSON:", error);
        return { found: false, data: [] };
    }
})
    .then(response => {
        console.log("📌 شكل البيانات داخل `response.data`:", JSON.stringify(response, null, 2));

        const table = document.getElementById("resultTable");
        const tbody = table.querySelector("tbody");
        tbody.innerHTML = "";

        if (!response || !response.found || !response.data || response.data.length === 0) {
    alert("❌ الاسم غير موجود أو البيانات غير صحيحة!");
    console.error("❌ استجابة البحث فارغة أو غير صالحة:", response);
    return;
}

        const row = document.createElement("tr");

// ✅ إدراج الاسم في أول عمود
const nameCell = document.createElement("td");
nameCell.textContent = response.data.length > 0 && Array.isArray(response.data[0]) ? response.data[0][0] : "❌ الاسم غير موجود";
row.appendChild(nameCell);

// ✅ توزيع الدرجات على الأعمدة الصحيحة للأسابيع
let scores = response.data.length > 0 && Array.isArray(response.data[0]) ? response.data[0].slice(1) : [];
for (let i = 0; i < 9; i++) {
    const td = document.createElement("td");
    td.textContent = scores[i] !== undefined && scores[i] !== "" ? scores[i] : "-"; // ✅ إدراج البيانات إن وجدت، وإلا "-"
    row.appendChild(td);
}

tbody.appendChild(row);
table.style.display = "table"; // ✅ تأكد من ظهور الجدول فقط عند البحث

        tbody.appendChild(row);
        table.style.display = "table"; // ✅ تأكد من ظهور الجدول فقط عند البحث
    })
    .catch(err => console.error('❌ خطأ أثناء البحث:', err));
}
    function goBackToWeekSelection() {
    console.log("🔙 الرجوع إلى صفحة اختيار الأسبوع");
    changePage("dataSection", "weekSelectionPage"); // ✅ رجوع للصفحة السابقة
}

  </script>

</body>
</html>
